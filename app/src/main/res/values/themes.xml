<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight" />

    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:paddingTop">@dimen/spacing_xxlarge</item>
        <item name="android:paddingBottom">@dimen/spacing_xxlarge</item>
        <item name="android:paddingLeft">@dimen/spacing_xxlarge</item>
        <item name="android:paddingRight">@dimen/spacing_xxlarge</item>
    </style>

    <style name="button_primary_base" parent="Button">
        <item name="android:background">@drawable/yellow_round_button</item>
        <item name="android:textColor">@color/button_primary_text_color</item>
        <item name="android:paddingTop">@dimen/spacing_standard</item>
        <item name="android:paddingRight">@dimen/spacing_standard</item>
        <item name="android:paddingLeft">@dimen/spacing_standard</item>
        <item name="android:paddingBottom">@dimen/spacing_standard</item>
        <item name="android:layout_marginLeft">@dimen/spacing_standard</item>
        <item name="android:layout_marginRight">@dimen/spacing_standard</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="TextTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_h2</item>
    </style>

</resources>